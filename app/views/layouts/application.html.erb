<!DOCTYPE html>
<html>
<head>
  <title>YourAppName</title>

  <%= csp_meta_tag %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <%= javascript_include_tag 'dropdownFunctionality' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'projects' %>
  <%= javascript_include_tag 'profile_checkmarks' %>
  <%= javascript_include_tag 'project_checkmarks' %>
  <%= javascript_include_tag 'combined_checkmarks' %>
  <%= javascript_include_tag 'user_session_tracker' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'rails-ujs' %>

  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <nav class="navbar is-primary">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item" href="/">
            <strong>YourAppName</strong>
          </a>
        </div>
        <div class="navbar-menu">
          <div class="navbar-end">
            <a class="navbar-item" href="/">Home</a>
            <a class="navbar-item" href="/projects">Projects</a>
            <% if user_signed_in? %>
              <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "button is-danger is-light", data: { turbo: false } %>
            <% else %>
              <%= link_to "Sign in with GitHub", user_github_omniauth_authorize_path, method: :post, class: "button is-dark is-light" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <div class="container">
    <!-- Hero Section -->
    <section class="hero is-medium is-primary is-bold">
      <div class="hero-body">
        <div class="container hero-content">
          <h1 class="title">
            Welcome to YourAppName
          </h1>
          <h2 class="subtitle">
            Discover and showcase amazing projects!
          </h2>
          <a href="#features" class="button is-link is-large">Learn More</a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="section" id="features">
      <div class="container">
        <h2 class="title is-3">Key Features</h2>
        <div class="columns is-multiline">
          <div class="column is-one-third">
            <div class="box">
              <div class="content">
                <h3 class="title is-4"><i class="fas fa-project-diagram"></i> Manage Projects</h3>
                <p>Organize and manage your projects with ease. Keep track of your progress and achievements.</p>
              </div>
            </div>
          </div>
          <div class="column is-one-third">
            <div class="box">
              <div class="content">
                <h3 class="title is-4"><i class="fas fa-users"></i> Collaborate</h3>
                <p>Work together with your team and share your ideas. Collaboration has never been easier.</p>
              </div>
            </div>
          </div>
          <div class="column is-one-third">
            <div class="box">
              <div class="content">
                <h3 class="title is-4"><i class="fas fa-chart-line"></i> Track Progress</h3>
                <p>Monitor the progress of your projects and stay on top of deadlines with our tracking tools.</p>
                <div class="field">
                  <label class="label">UserId</label>
                  <div class="control">
                    <input class="input" type="number" id="current_user_id" placeholder="Current User ID">
                  </div>
                </div>
                <div class="field">
                  <label class="label">LinkedIn Username</label>
                  <div class="control">
                    <input class="input" type="text" id="linkedin_username" placeholder="Enter LinkedIn Username">
                  </div>
                </div>
                <div class="field">
                  <label class="label">LinkedIn Password</label>
                  <div class="control">
                    <input class="input" type="password" id="linkedin_password" placeholder="Enter LinkedIn Password">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Project List Section -->
    <section class="section">
      <div class="container">
        <h2 class="title is-3">Projects</h2>
        <%= yield %>
      </div>
    </section>
  </div>

  <footer class="footer">
    <div class="content has-text-centered">
      <p>Â© 2024 YourAppName</p>
    </div>
  </footer>

  <% if flash[:alert] %>
  <div class="modal" id="passwordAlertModal" style="display: block;">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">Alert</p>
        <button class="delete" aria-label="close" onclick="document.getElementById('passwordAlertModal').style.display='none'"></button>
      </header>
      <section class="modal-card-body">
        <%= flash[:alert] %>
        <form id="correctCredentialsForm" action="<%= update_user_sessions_path %>" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="field">
            <label class="label">Username</label>
            <div class="control">
              <input class="input" type="text" name="username" placeholder="Enter correct username">
            </div>
          </div>
          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input class="input" type="password" name="password" placeholder="Enter correct password">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <button type="submit" class="button is-primary">Submit</button>
            </div>
          </div>
        </form>
      </section>
      <footer class="modal-card-foot">
        <button class="button" onclick="document.getElementById('passwordAlertModal').style.display='none'">Close</button>
      </footer>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function() {
    if (document.querySelector('#passwordAlertModal')) {
      document.querySelector('#passwordAlertModal').style.display = 'block';
    }
  });
</script>

</body>
</html>
